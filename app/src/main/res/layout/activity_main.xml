<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#D2D93B">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        tools:context=".MainActivity"
        android:orientation="horizontal"
     >


    <TextView android:id="@+id/player_label"
        android:layout_width="fill_parent"
        android:textSize="22sp"
        android:textColor="#41924B"

        android:layout_height="wrap_content"

        android:text="Life Counter"
        android:paddingBottom="@dimen/activity_horizontal_margin"

        android:textStyle="italic"
        />




    </LinearLayout>

    <Button	android:id="@+id/btn_add_player"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_more_player"
        android:textColor="#003333"
        android:background="#41924B" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingTop="@dimen/activity_horizontal_margin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:context=".MainActivity"
        android:orientation="horizontal"
       >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            android:textColor="#41924B"
            android:text="Player Number : LifeLeft"
            android:textStyle="bold"
            />


    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingTop="@dimen/activity_horizontal_margin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context=".MainActivity"
        android:orientation="horizontal"
        android:weightSum="4">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/player_1"
            android:text="PLAYER 1:" />

        <TextView android:id="@+id/life_left_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="   20   "
            />

        <Button	android:id="@+id/btn_add_1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:layout_weight="1"/>

        <Button	android:id="@+id/btn_subtract_1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="@string/subtract"
            android:layout_weight="1"/>

        <Button	android:id="@+id/btn_add_five_1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="@string/add_five"
            android:layout_weight="1"/>

        <Button	android:id="@+id/btn_subtract_five_1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="@string/subtract_five"
            android:layout_weight="1"/>


    </LinearLayout>


